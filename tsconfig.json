{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "tests/unit/lib/api/challenges/create.test.ts",
    "tests/unit/lib/api/challenges/join-leave.test.ts",
    "tests/unit/lib/api/challenges/leaderboard.test.ts",
    "tests/unit/lib/api/challenges/progress.test.ts",
    "tests/unit/lib/api/notifications.test.ts",
    "tests/integration/settings/auth-settings-coordination.test.ts",
    "tests/integration/settings/settings-update-flow.test.ts",
    "tests/unit/features/settings/SettingsPageContent.test.tsx",
    "tests/unit/hooks/useNotifications.test.tsx"
  ]
}
